@model HRManagementSystem.Web.Models.Shift

@{
    ViewData["Title"] = "Sửa ca làm việc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Sửa ca làm việc</h1>
        <p class="mt-2 text-gray-600">Cập nhật thông tin cho ca làm việc</p>
    </div>

    <div class="bg-white p-6 rounded-xl shadow-md border border-gray-100">
        <form asp-action="Edit" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            <input type="hidden" asp-for="Id" />
            
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Tên ca làm việc *</label>
                <input asp-for="Name" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                <span asp-validation-for="Name" class="text-danger text-sm"></span>
            </div>

            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">Mô tả</label>
                <textarea asp-for="Description" rows="3" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
                <span asp-validation-for="Description" class="text-danger text-sm"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="StartTime" class="block text-sm font-medium text-gray-700 mb-1">Thời gian bắt đầu *</label>
                    <input asp-for="StartTime" type="time" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                    <span asp-validation-for="StartTime" class="text-danger text-sm"></span>
                </div>

                <div>
                    <label asp-for="EndTime" class="block text-sm font-medium text-gray-700 mb-1">Thời gian kết thúc *</label>
                    <input asp-for="EndTime" type="time" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                    <span asp-validation-for="EndTime" class="text-danger text-sm"></span>
                </div>
            </div>

            <div>
                <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-1">Trạng thái</label>
                <select asp-for="Status" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="Active">Hoạt động</option>
                    <option value="Inactive">Không hoạt động</option>
                </select>
                <span asp-validation-for="Status" class="text-danger text-sm"></span>
            </div>

            <div class="flex space-x-4 pt-4">
                <button type="submit" class="btn btn-primary px-6 py-2 rounded-lg flex items-center">
                    <i class="fas fa-save mr-2"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary px-6 py-2 rounded-lg flex items-center">
                    <i class="fas fa-times mr-2"></i> Hủy bỏ
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}