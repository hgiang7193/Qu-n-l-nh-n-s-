@model IEnumerable<HRManagementSystem.Web.Models.Shift>

@{
    ViewData["Title"] = "Danh sách ca làm việc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Ca làm việc</h1>
        <p class="text-gray-600">Quản lý các ca làm việc trong hệ thống</p>
    </div>

    <div class="mb-6 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
        <div class="relative w-full sm:w-auto">
            <input type="text" placeholder="Tìm kiếm ca làm việc..." class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
        </div>
        <a asp-action="Create" class="btn btn-primary flex items-center justify-center px-4 py-2">
            <i class="fas fa-plus mr-2"></i> Tạo ca làm việc mới
        </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var shift in Model)
        {
            <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden transition-transform duration-300 hover:shadow-lg hover:-translate-y-1">
                <div class="p-6">
                    <div class="flex justify-between items-start mb-4">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-900">@shift.Name</h3>
                        </div>
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @(shift.Status == "Active" ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                            @shift.Status
                        </span>
                    </div>
                    
                    <p class="text-gray-600 mb-4">@shift.Description</p>
                    
                    <div class="space-y-2 mb-4">
                        <div class="flex justify-between">
                            <span class="text-gray-500">Thời gian bắt đầu:</span>
                            <span class="font-medium">@shift.StartTime.ToString(@"hh\:mm")</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-500">Thời gian kết thúc:</span>
                            <span class="font-medium">@shift.EndTime.ToString(@"hh\:mm")</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-500">Ngày tạo:</span>
                            <span class="font-medium">@shift.CreatedAt.ToString("dd/MM/yyyy")</span>
                        </div>
                    </div>
                    
                    <div class="flex space-x-2">
                        <a asp-action="Edit" asp-route-id="@shift.Id" class="btn btn-outline-primary px-3 py-1 text-sm">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@shift.Id" class="btn btn-outline-info px-3 py-1 text-sm">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@shift.Id" class="btn btn-outline-danger px-3 py-1 text-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
    
    @if (!Model.Any())
    {
        <div class="text-center py-12">
            <i class="fas fa-clock text-5xl text-gray-300 mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-1">Không có ca làm việc nào</h3>
            <p class="text-gray-500 mb-4">Chưa có ca làm việc nào được tạo trong hệ thống</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus mr-2"></i> Tạo ca làm việc đầu tiên
            </a>
        </div>
    }
</div>