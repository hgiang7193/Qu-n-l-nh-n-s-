@model HRManagementSystem.Web.Models.Department

@{
    ViewData["Title"] = "Tạo mới phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Tạo mới phòng ban</h1>
        <p class="mt-2 text-gray-600">Nhập thông tin chi tiết cho phòng ban mới</p>
    </div>

    <form asp-action="Create" method="post" class="space-y-8 bg-white p-6 rounded-xl shadow-md border border-gray-100">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="space-y-4">
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Tên phòng ban *</label>
                <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Name" class="text-danger text-sm"></span>
            </div>
            
            <div>
                <label asp-for="Code" class="block text-sm font-medium text-gray-700 mb-1">Mã phòng ban *</label>
                <input asp-for="Code" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Code" class="text-danger text-sm"></span>
            </div>
            
            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">Mô tả</label>
                <textarea asp-for="Description" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger text-sm"></span>
            </div>
            
            <div>
                <label asp-for="ParentId" class="block text-sm font-medium text-gray-700 mb-1">Phòng ban cha</label>
                <select asp-for="ParentId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" asp-items="@(new SelectList(ViewBag.ParentDepartments, "Id", "Name"))">
                    <option value="">-- Chọn phòng ban cha --</option>
                </select>
                <span asp-validation-for="ParentId" class="text-danger text-sm"></span>
            </div>
            
            <div>
                <label asp-for="ManagerId" class="block text-sm font-medium text-gray-700 mb-1">Người quản lý</label>
                <select asp-for="ManagerId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" asp-items="@(new SelectList(ViewBag.Managers, "Id", "FullName"))">
                    <option value="">-- Chọn người quản lý --</option>
                </select>
                <span asp-validation-for="ManagerId" class="text-danger text-sm"></span>
            </div>
            
            <div>
                <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-1">Trạng thái</label>
                <select asp-for="Status" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" asp-items="@(new SelectList(new[] { "active", "inactive" }))">
                </select>
                <span asp-validation-for="Status" class="text-danger text-sm"></span>
            </div>
        </div>
        
        <div class="flex space-x-4 pt-4">
            <button type="submit" class="px-6 py-2.5 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium rounded-lg hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 flex items-center shadow-md hover:shadow-lg">
                <i class="fas fa-plus-circle mr-2"></i> Tạo mới
            </button>
            <a asp-action="Index" class="px-6 py-2.5 bg-gradient-to-r from-gray-500 to-gray-600 text-white font-medium rounded-lg hover:from-gray-600 hover:to-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-all duration-200 flex items-center shadow-md hover:shadow-lg">
                <i class="fas fa-arrow-left mr-2"></i> Quay lại
            </a>
        </div>
    </form>

    <div class="mt-6">
        <partial name="_ValidationScriptsPartial" />
    </div>
</div>