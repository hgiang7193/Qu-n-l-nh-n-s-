@model HRManagementSystem.Web.Models.Attendance

@{
    ViewData["Title"] = "Delete Attendance Record";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Attendance Record</h2>

<h3>Are you sure you want to delete this record?</h3>
<div>
    <h4>Attendance</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Employee</dt>
        <dd class="col-sm-10">@Model.Employee?.FullName</dd>
        
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToString("MM/dd/yyyy")</dd>
        
        <dt class="col-sm-2">Check In</dt>
        <dd class="col-sm-10">@Model.CheckIn?.ToString("HH:mm")</dd>
        
        <dt class="col-sm-2">Check Out</dt>
        <dd class="col-sm-10">@Model.CheckOut?.ToString("HH:mm")</dd>
        
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            @switch (Model.Status)
            {
                case "on_time":
                    <span class="badge bg-success">@Model.Status</span>
                    break;
                case "late":
                    <span class="badge bg-warning">@Model.Status</span>
                    break;
                case "absent":
                    <span class="badge bg-danger">@Model.Status</span>
                    break;
                case "leave":
                    <span class="badge bg-info">@Model.Status</span>
                    break;
                case "holiday":
                    <span class="badge bg-secondary">@Model.Status</span>
                    break;
                default:
                    <span class="badge bg-secondary">@Model.Status</span>
                    break;
            }
        </dd>
        
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("MM/dd/yyyy HH:mm")</dd>
    </dl>
    
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>