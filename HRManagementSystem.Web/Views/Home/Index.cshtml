@{
    ViewData["Title"] = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-8 text-center">
        <h1 class="text-4xl font-bold text-gray-900 mb-2">Hệ thống quản lý nhân sự</h1>
        <p class="text-lg text-gray-600">Chào mừng bạn đến với hệ thống quản lý nhân sự chuyên nghiệp</p>
    </div>
    
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <a asp-controller="Employee" asp-action="Index" class="bg-gradient-to-br from-blue-500 to-blue-600 p-6 rounded-xl shadow-lg text-white text-center transition-transform duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex justify-center mb-4">
                <i class="fas fa-users text-4xl"></i>
            </div>
            <h3 class="text-xl font-semibold mb-2">Nhân viên</h3>
            <p class="text-blue-100">Quản lý thông tin nhân viên</p>
        </a>
        
        <a asp-controller="Position" asp-action="Index" class="bg-gradient-to-br from-green-500 to-green-600 p-6 rounded-xl shadow-lg text-white text-center transition-transform duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex justify-center mb-4">
                <i class="fas fa-briefcase text-4xl"></i>
            </div>
            <h3 class="text-xl font-semibold mb-2">Vị trí</h3>
            <p class="text-green-100">Quản lý các vị trí công việc</p>
        </a>
        
        <a asp-controller="Department" asp-action="Index" class="bg-gradient-to-br from-cyan-500 to-cyan-600 p-6 rounded-xl shadow-lg text-white text-center transition-transform duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex justify-center mb-4">
                <i class="fas fa-sitemap text-4xl"></i>
            </div>
            <h3 class="text-xl font-semibold mb-2">Phòng ban</h3>
            <p class="text-cyan-100">Quản lý các phòng ban, bộ phận</p>
        </a>
        
        <a asp-controller="Shift" asp-action="Index" class="bg-gradient-to-br from-purple-500 to-purple-600 p-6 rounded-xl shadow-lg text-white text-center transition-transform duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex justify-center mb-4">
                <i class="fas fa-clock text-4xl"></i>
            </div>
            <h3 class="text-xl font-semibold mb-2">Ca làm việc</h3>
            <p class="text-purple-100">Quản lý lịch làm việc</p>
        </a>
        
        <a asp-controller="Project" asp-action="Index" class="bg-gradient-to-br from-yellow-500 to-amber-600 p-6 rounded-xl shadow-lg text-white text-center transition-transform duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex justify-center mb-4">
                <i class="fas fa-project-diagram text-4xl"></i>
            </div>
            <h3 class="text-xl font-semibold mb-2">Dự án</h3>
            <p class="text-amber-100">Quản lý các dự án</p>
        </a>
        
        <a asp-controller="Project" asp-action="AssignEmployees" class="bg-gradient-to-br from-indigo-500 to-indigo-600 p-6 rounded-xl shadow-lg text-white text-center transition-transform duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex justify-center mb-4">
                <i class="fas fa-user-plus text-4xl"></i>
            </div>
            <h3 class="text-xl font-semibold mb-2">Gán nhân viên</h3>
            <p class="text-indigo-100">Phân công nhân viên vào dự án</p>
        </a>
        
        <a asp-controller="Role" asp-action="Index" class="bg-gradient-to-br from-red-500 to-red-600 p-6 rounded-xl shadow-lg text-white text-center transition-transform duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex justify-center mb-4">
                <i class="fas fa-user-tag text-4xl"></i>
            </div>
            <h3 class="text-xl font-semibold mb-2">Vai trò</h3>
            <p class="text-red-100">Quản lý quyền và vai trò</p>
        </a>
        
        <a asp-controller="Attendance" asp-action="Index" class="bg-gradient-to-br from-gray-700 to-gray-800 p-6 rounded-xl shadow-lg text-white text-center transition-transform duration-300 hover:scale-105 hover:shadow-xl">
            <div class="flex justify-center mb-4">
                <i class="fas fa-calendar-check text-4xl"></i>
            </div>
            <h3 class="text-xl font-semibold mb-2">Chấm công</h3>
            <p class="text-gray-200">Theo dõi thời gian làm việc</p>
        </a>
    </div>
    
    <div class="bg-white p-8 rounded-xl shadow-lg border border-gray-100 text-center">
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Hệ thống quản lý nhân sự chuyên nghiệp</h2>
        <p class="text-gray-600 mb-6">Hệ thống cung cấp các công cụ quản lý toàn diện cho doanh nghiệp, từ quản lý nhân viên, dự án đến chấm công và phân quyền.</p>
        <div class="flex justify-center space-x-4">
            <div class="text-center">
                <div class="text-3xl font-bold text-blue-600">@ViewBag.TotalEmployees</div>
                <div class="text-gray-600">Nhân viên</div>
            </div>
            <div class="text-center">
                <div class="text-3xl font-bold text-green-600">@ViewBag.TotalProjects</div>
                <div class="text-gray-600">Dự án</div>
            </div>
            <div class="text-center">
                <div class="text-3xl font-bold text-purple-600">@ViewBag.TotalDepartments</div>
                <div class="text-gray-600">Phòng ban</div>
            </div>
            <div class="text-center">
                <div class="text-3xl font-bold text-yellow-600">@ViewBag.TotalPositions</div>
                <div class="text-gray-600">Vị trí</div>
            </div>
        </div>
    </div>
</div>
