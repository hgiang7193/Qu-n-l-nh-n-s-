@model HRManagementSystem.Web.Models.Role

@{
    ViewData["Title"] = "Sửa vai trò";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Sửa vai trò</h1>
        <p class="mt-2 text-gray-600">Cập nhật thông tin cho vai trò</p>
    </div>

    <div class="bg-white shadow overflow-hidden rounded-lg p-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-4">
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Tên</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger text-sm"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">Mô tả</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger text-sm"></span>
            </div>
            <div class="form-group mb-6">
                <label asp-for="CreatedAt" class="block text-sm font-medium text-gray-700 mb-1">Ngày tạo</label>
                <input asp-for="CreatedAt" class="form-control" readonly />
                <span asp-validation-for="CreatedAt" class="text-danger text-sm"></span>
            </div>
            <div class="flex space-x-4">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}