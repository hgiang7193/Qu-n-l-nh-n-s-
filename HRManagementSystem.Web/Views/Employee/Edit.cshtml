@model HRManagementSystem.Web.Models.User

@{
    ViewData["Title"] = "Sửa nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Sửa nhân viên</h1>
        <p class="mt-2 text-gray-600">Cập nhật thông tin cho nhân viên</p>
    </div>

    <div class="bg-white p-6 rounded-xl shadow-md border border-gray-100">
        <form asp-action="Edit" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-1">Tên *</label>
                    <input asp-for="FirstName" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                    <span asp-validation-for="FirstName" class="text-danger text-sm"></span>
                </div>

                <div>
                    <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-1">Họ *</label>
                    <input asp-for="LastName" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                    <span asp-validation-for="LastName" class="text-danger text-sm"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">Tên đăng nhập *</label>
                    <input asp-for="Username" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                    <span asp-validation-for="Username" class="text-danger text-sm"></span>
                </div>

                <div>
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
                    <input asp-for="Email" type="email" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                    <span asp-validation-for="Email" class="text-danger text-sm"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="EmployeeCode" class="block text-sm font-medium text-gray-700 mb-1">Mã nhân viên *</label>
                    <input asp-for="EmployeeCode" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                    <span asp-validation-for="EmployeeCode" class="text-danger text-sm"></span>
                </div>

                <div>
                    <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
                    <input asp-for="Phone" type="tel" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Phone" class="text-danger text-sm"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <label asp-for="DepartmentId" class="block text-sm font-medium text-gray-700 mb-1">Phòng ban</label>
                    <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="">-- Chọn phòng ban --</option>
                    </select>
                    <span asp-validation-for="DepartmentId" class="text-danger text-sm"></span>
                </div>

                <div>
                    <label asp-for="PositionId" class="block text-sm font-medium text-gray-700 mb-1">Vị trí</label>
                    <select asp-for="PositionId" asp-items="ViewBag.Positions" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="">-- Chọn vị trí --</option>
                    </select>
                    <span asp-validation-for="PositionId" class="text-danger text-sm"></span>
                </div>

                <div>
                    <label asp-for="ManagerId" class="block text-sm font-medium text-gray-700 mb-1">Quản lý</label>
                    <select asp-for="ManagerId" asp-items="ViewBag.Managers" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="">-- Chọn quản lý --</option>
                    </select>
                    <span asp-validation-for="ManagerId" class="text-danger text-sm"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="HireDate" class="block text-sm font-medium text-gray-700 mb-1">Ngày tuyển dụng</label>
                    <input asp-for="HireDate" type="date" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="HireDate" class="text-danger text-sm"></span>
                </div>

                <div>
                    <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-1">Trạng thái</label>
                    <select asp-for="Status" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="active">Hoạt động</option>
                        <option value="inactive">Không hoạt động</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger text-sm"></span>
                </div>
            </div>

            <div>
                <label asp-for="Notes" class="block text-sm font-medium text-gray-700 mb-1">Ghi chú</label>
                <textarea asp-for="Notes" rows="3" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
                <span asp-validation-for="Notes" class="text-danger text-sm"></span>
            </div>

            <div class="flex space-x-4 pt-4">
                <button type="submit" class="btn btn-primary px-6 py-2 rounded-lg flex items-center">
                    <i class="fas fa-save mr-2"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary px-6 py-2 rounded-lg flex items-center">
                    <i class="fas fa-times mr-2"></i> Hủy bỏ
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}