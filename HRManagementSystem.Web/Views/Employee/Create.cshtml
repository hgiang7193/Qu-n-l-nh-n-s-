@model HRManagementSystem.Web.Models.User

@{
    ViewData["Title"] = "Tạo mới nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Tạo mới nhân viên</h1>
        <p class="mt-2 text-gray-600">Nhập thông tin chi tiết cho nhân viên mới</p>
    </div>

    <form asp-action="Create" method="post" class="space-y-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Thông tin cơ bản -->
            <div class="bg-white p-6 rounded-xl shadow-md border border-gray-100">
                <h2 class="text-xl font-semibold text-gray-800 mb-4 pb-2 border-b border-gray-200">Thông tin cơ bản</h2>
                
                <div class="space-y-4">
                    <div>
                        <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-1">Tên *</label>
                        <input asp-for="FirstName" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                        <span asp-validation-for="FirstName" class="text-danger text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-1">Họ *</label>
                        <input asp-for="LastName" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                        <span asp-validation-for="LastName" class="text-danger text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email *</label>
                        <input asp-for="Email" type="email" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                        <span asp-validation-for="Email" class="text-danger text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="EmployeeCode" class="block text-sm font-medium text-gray-700 mb-1">Mã nhân viên *</label>
                        <input asp-for="EmployeeCode" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                        <span asp-validation-for="EmployeeCode" class="text-danger text-sm"></span>
                    </div>

                    <div>
                        <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
                        <input asp-for="Phone" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    </div>
                </div>
            </div>

            <!-- Thông tin tổ chức -->
            <div class="bg-white p-6 rounded-xl shadow-md border border-gray-100">
                <h2 class="text-xl font-semibold text-gray-800 mb-4 pb-2 border-b border-gray-200">Thông tin tổ chức</h2>
                
                <div class="space-y-4">
                    <div>
                        <label asp-for="DepartmentId" class="block text-sm font-medium text-gray-700 mb-1">Phòng ban</label>
                        <select asp-for="DepartmentId" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" asp-items="@(new SelectList(ViewBag.Departments, "Id", "Name"))">
                            <option value="">Chọn phòng ban</option>
                        </select>
                    </div>

                    <div>
                        <label asp-for="PositionId" class="block text-sm font-medium text-gray-700 mb-1">Chức vụ</label>
                        <select asp-for="PositionId" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" asp-items="@(new SelectList(ViewBag.Positions, "Id", "Name"))">
                            <option value="">Chọn chức vụ</option>
                        </select>
                    </div>

                    <div>
                        <label asp-for="ManagerId" class="block text-sm font-medium text-gray-700 mb-1">Người quản lý</label>
                        <select asp-for="ManagerId" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" asp-items="@(new SelectList(ViewBag.Managers, "Id", "FullName"))">
                            <option value="">Chọn người quản lý</option>
                        </select>
                    </div>

                    <div>
                        <label asp-for="HireDate" class="block text-sm font-medium text-gray-700 mb-1">Ngày tuyển dụng</label>
                        <input asp-for="HireDate" type="date" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    </div>

                    <div>
                        <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-1">Trạng thái</label>
                        <select asp-for="Status" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                            <option value="active">Hoạt động</option>
                            <option value="inactive">Không hoạt động</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex space-x-4 pt-4">
            <button type="submit" class="px-6 py-2.5 bg-gradient-to-r from-blue-600 to-blue-700 text-white font-medium rounded-lg hover:from-blue-700 hover:to-blue-800 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200 flex items-center shadow-md hover:shadow-lg">
                <i class="fas fa-plus-circle mr-2"></i> Tạo mới
            </button>
            <a asp-action="Index" class="px-6 py-2.5 bg-gradient-to-r from-gray-500 to-gray-600 text-white font-medium rounded-lg hover:from-gray-600 hover:to-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-all duration-200 flex items-center shadow-md hover:shadow-lg">
                <i class="fas fa-arrow-left mr-2"></i> Quay lại
            </a>
        </div>
    </form>

    <div class="mt-6">
        <partial name="_ValidationScriptsPartial" />
    </div>
</div>