@model HRManagementSystem.Web.Models.Project

@{
    ViewData["Title"] = "Xóa dự án";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Xóa dự án</h1>
        <p class="mt-2 text-gray-600">Bạn có chắc chắn muốn xóa dự án này?</p>
    </div>

    <div class="bg-white p-6 rounded-xl shadow-md border border-gray-100">
        <dl class="space-y-4">
            <div class="grid grid-cols-3 gap-4">
                <dt class="font-medium text-gray-700">Tên dự án</dt>
                <dd class="col-span-2">@Html.DisplayFor(model => model.Name)</dd>
            </div>
            <div class="grid grid-cols-3 gap-4">
                <dt class="font-medium text-gray-700">Mã dự án</dt>
                <dd class="col-span-2">@Html.DisplayFor(model => model.Code)</dd>
            </div>
            <div class="grid grid-cols-3 gap-4">
                <dt class="font-medium text-gray-700">Mô tả</dt>
                <dd class="col-span-2">@Html.DisplayFor(model => model.Description)</dd>
            </div>
            <div class="grid grid-cols-3 gap-4">
                <dt class="font-medium text-gray-700">Ngày bắt đầu</dt>
                <dd class="col-span-2">@Html.DisplayFor(model => model.StartDate)</dd>
            </div>
            <div class="grid grid-cols-3 gap-4">
                <dt class="font-medium text-gray-700">Ngày kết thúc</dt>
                <dd class="col-span-2">@Html.DisplayFor(model => model.EndDate)</dd>
            </div>
            <div class="grid grid-cols-3 gap-4">
                <dt class="font-medium text-gray-700">Trạng thái</dt>
                <dd class="col-span-2">@Html.DisplayFor(model => model.Status)</dd>
            </div>
            <div class="grid grid-cols-3 gap-4">
                <dt class="font-medium text-gray-700">Loại dự án</dt>
                <dd class="col-span-2">@Html.DisplayFor(model => model.ProjectType)</dd>
            </div>
            <div class="grid grid-cols-3 gap-4">
                <dt class="font-medium text-gray-700">Quản lý dự án</dt>
                <dd class="col-span-2">@(Model.ProjectManager?.FullName ?? "Chưa có")</dd>
            </div>
        </dl>

        <form asp-action="DeleteConfirmed" method="post" class="mt-8 flex space-x-4">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger px-6 py-2 rounded-lg flex items-center">
                <i class="fas fa-trash mr-2"></i> Xác nhận xóa
            </button>
            <a asp-action="Index" class="btn btn-secondary px-6 py-2 rounded-lg flex items-center">
                <i class="fas fa-times mr-2"></i> Hủy bỏ
            </a>
        </form>
    </div>
</div>