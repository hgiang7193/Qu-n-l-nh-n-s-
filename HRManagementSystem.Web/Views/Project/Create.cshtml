@model HRManagementSystem.Web.Models.Project

@{
    ViewData["Title"] = "Tạo dự án mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Tạo dự án mới</h1>
        <p class="mt-2 text-gray-600">Nhập thông tin chi tiết cho dự án mới</p>
    </div>

    <div class="bg-white p-6 rounded-xl shadow-md border border-gray-100">
        <form asp-action="Create" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
            
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1">Tên dự án *</label>
                <input asp-for="Name" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                <span asp-validation-for="Name" class="text-danger text-sm"></span>
            </div>

            <div>
                <label asp-for="Code" class="block text-sm font-medium text-gray-700 mb-1">Mã dự án *</label>
                <input asp-for="Code" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                <span asp-validation-for="Code" class="text-danger text-sm"></span>
            </div>

            <div>
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-1">Mô tả</label>
                <textarea asp-for="Description" rows="4" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"></textarea>
                <span asp-validation-for="Description" class="text-danger text-sm"></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="StartDate" class="block text-sm font-medium text-gray-700 mb-1">Ngày bắt đầu *</label>
                    <input asp-for="StartDate" type="date" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" required />
                    <span asp-validation-for="StartDate" class="text-danger text-sm"></span>
                </div>

                <div>
                    <label asp-for="EndDate" class="block text-sm font-medium text-gray-700 mb-1">Ngày kết thúc</label>
                    <input asp-for="EndDate" type="date" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="EndDate" class="text-danger text-sm"></span>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-1">Trạng thái</label>
                    <select asp-for="Status" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                        <option value="active">Hoạt động</option>
                        <option value="inactive">Không hoạt động</option>
                        <option value="completed">Đã hoàn thành</option>
                        <option value="on-hold">Tạm hoãn</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger text-sm"></span>
                </div>

                <div>
                    <label asp-for="ProjectType" class="block text-sm font-medium text-gray-700 mb-1">Loại dự án</label>
                    <input asp-for="ProjectType" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="ProjectType" class="text-danger text-sm"></span>
                </div>
            </div>

            <div>
                <label asp-for="ProjectManagerId" class="block text-sm font-medium text-gray-700 mb-1">Quản lý dự án</label>
                <select asp-for="ProjectManagerId" asp-items="ViewBag.ProjectManagers" class="form-control w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">-- Chọn quản lý dự án --</option>
                </select>
                <span asp-validation-for="ProjectManagerId" class="text-danger text-sm"></span>
            </div>

            <div class="flex space-x-4 pt-4">
                <button type="submit" class="btn btn-primary px-6 py-2 rounded-lg flex items-center">
                    <i class="fas fa-plus mr-2"></i> Tạo mới
                </button>
                <a asp-action="Index" class="btn btn-secondary px-6 py-2 rounded-lg flex items-center">
                    <i class="fas fa-times mr-2"></i> Hủy bỏ
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}